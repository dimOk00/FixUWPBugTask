<UserControl
    x:Class="Foundation.Clients.MableArch.Controls.Dial.DialMenuMediaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AlmacantarControl.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:imaging="using:Foundation.Controls.Imaging"
    xmlns:controls="using:Foundation.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="BlurGrid">
        <Grid x:Name="OpacityGrid">
            <imaging:UnrestrictedImage x:Name="ImageControl" Opacity="0"/>
            <controls:UnrestrictedMediaPlayer x:Name="VideoControl" Opacity="0"/>
        </Grid>
    </Grid>
</UserControl>
